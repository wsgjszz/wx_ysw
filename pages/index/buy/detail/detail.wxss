/* 信息卡片 */
.card-info {
  border-top: 2rpx solid #e0e0e0;
  border-bottom: 13rpx solid #f2f2f2;
}

.card-info-title {
  padding: 25rpx 30rpx;
  border-bottom: 2rpx solid #f8f8f8;
  font-weight: 500;
  font-family: 微软雅黑;
}

.desc {
  margin: 15rpx 30rpx;
  font-size: 30rpx;
  font-weight: 400;
  font-family: 微软雅黑;
  color: #5d5d5d;
}

.desc-text {
  margin: 10rpx 0;
}

.desc-text text {
  color: #f66d62;
  font-weight: 400;
}

/* 用户信息 */

.user-info {
  margin: 20rpx 30rpx;
  border-bottom: 13rpx solid #f2f2f2;
}
.user-info-author{
  margin: 10rpx 0;
}
.user-info-author-contact{
  font-size: 35rpx;
  margin-left: 20rpx;
}
.user-info-author-text{
  font-size: 28rpx;
  color: #f54c3a;
  font-weight: 500;
  margin-left: 40rpx;
}
.user-info-phone{
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f8f8f8;
}
.user-info-phone-text{
  margin-left: 20rpx;
  font-size: 34rpx;
}
.user-info-desc{
  font-size: 30rpx;
  color: #a6a6a6;
  padding: 20rpx 0;
}