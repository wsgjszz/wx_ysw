/* pages/circle/circle.wxss */

/* 地区 */
.hot-area{
  margin-top: 20rpx;
  margin-left: 8rpx;
}
.hot-area-title{
  font-size: 35rpx;
} 
.hot-area-options text{
  padding: 10rpx 15rpx;
  margin-right: 30rpx;
  background-color: #f4f4f4;
  border-radius: 15%;
  font-size: 31rpx;
}

/* 信息卡片 */
.card{
  margin: 30rpx 10rpx;
  height: 280rpx;
}
.card-info{
  height: 270rpx;
  padding-left: 20rpx;
  border-bottom: 3rpx solid #e2dfdf;
}
.card-name{
  font-weight: 530;
  margin: 10rpx;
}
.card-area{
  margin-left: 10rpx;
  font-size: 30rpx;
}
.card-count{
  margin-top: 120rpx;
  font-size: 26rpx;
}


/* 底部按钮 */
.button{
  position: fixed;
  bottom: 8%;
  width: 100%;
  height: 120rpx;
}
