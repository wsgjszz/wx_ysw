}

/* 品种规格 */
.card-desc {
  height: 500rpx;
  padding: 0 20rpx;
}
.card-desc-title {
  display: inline-block;
  width: 200rpx;
  height: 60rpx;
  font-size: 33rpx;
  padding-left: 15rpx;
  color: #323233;
}
.card-desc-row{
  width: 480rpx;
  height: 60rpx;
  display: inline-block;
}
.margin-right{
  padding-left: 215rpx;
}
.card-desc-field{
  display: inline-block;
  width: 350rpx;
}
.card-desc-text{
  display: inline-block;
  width: 100rpx;
  height: 80rpx;
  font-size: 35rpx;
  color: #9a9a9a;
}

