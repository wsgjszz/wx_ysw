/* pages/promotion/create/create.wxss */
.myContainer {
  width: 100%;
  height: 1300rpx;
  position: absolute;
}
.options{
  margin-top: -30rpx;
}
.options-time{
  margin-top: 30rpx;
}
.options-time-title{
  float: left;
  margin-left:40rpx; 
  font-weight: 350;
  color: #4f4f52 !important;
  font-size: 36rpx !important;
}
.options-time .van-radio {
  float: left;
  margin-left: 30rpx;
}

.button{
  position: fixed;
  bottom: 0;
