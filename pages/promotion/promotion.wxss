/* pages/promotion/promotion.wxss */
/* 信息卡片 */
.card{
  margin: 30rpx 10rpx;
  height: 250rpx;
}
.card-info{
  height: 240rpx;
  padding-left: 20rpx;
  border-bottom: 3rpx solid #e2dfdf;
}
.card-title{
  font-weight: 600;
  margin: 10rpx;
}
.card-desc{
  margin-left: 10rpx;
  font-size: 30rpx;
  height: 120rpx;
}
.card-price{
  margin-left: 10rpx;
  font-size: 32rpx;
}

/* 底部按钮 */
.button{
  position: fixed;
  bottom: 8%;
  width: 100%;
  height: 120rpx;
}